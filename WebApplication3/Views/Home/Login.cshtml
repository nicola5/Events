<link href="~/Content/css/style.css" rel="stylesheet">

<!--==========================
  Hero Section
============================-->
<section id="hero">
    <div class="hero-container">
        <h2>
            @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @Class = "form validate-form", @id = "validate-form" }))
            {
                <label>Usuario</label>
                <input type="text" name="user" class="form-control" id="user" placeholder="Usuario" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                <label>Contraseña</label>
                <input type="password" name="pass" class="form-control" id="pass" placeholder="*******" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                <br />
                <input type="submit" class="btn btn-primary btn-round btn-lg btn-block" value="Iniciar Sesion" id="btn">
            }
        </h2>

        <div class="validation"></div>
    </div>
</section>

